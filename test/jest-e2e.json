{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "y/contracts/(.*)": "<rootDir>/../libs/contracts/src/$1",
    "y/contracts": "<rootDir>/../libs/contracts/src"
  }
}